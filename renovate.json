{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["go"],
      "packageNames": ["golang.org/x/net"],
      "extends": ["schedule:quarterly"]
    }
  ]
}
